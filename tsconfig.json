{
  "extends": "@yopem/typescript-config/base",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsxImportSource": "hono/jsx",
    "types": ["node"],
    "outDir": "./dist",
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": "./src/"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
